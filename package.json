{
  "name": "citation-model",
  "version": "1.0.0",
  "description": "JS Library that create a model around citations files",
  "homepage": "",
  "author": "Kristian Garza",
  "type": "module",
  "bin": "cli.js",
  "files": [
    "lib"
  ],
  "main": "index.js",
  "keywords": [
    "codemeta",
    "CITATION.cff",
    "citation"
  ],
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.6.0",
    "eslint-config-xo": "^0.27.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "jest": "^26.6.3",
    "lint-staged": "^9.4.3",
    "prettier": "^1.19.1",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.2"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "scripts": {
    "test": "jest",
    "pretest": "eslint .",
    "build": "tsc"
  },
  "license": "MIT",
  "dependencies": {
    "@babel/preset-typescript": "^7.15.0",
    "scaffold-npm": "^1.1.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  },
  "repository": "kjgarza/citation-model",
  "jest": {
    "testEnvironment": "node"
  }
}
